<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="mainPane" prefHeight="368.0" prefWidth="398.0" style="-fx-background-color: #343D46;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.AutorizationController">
   <children>
      <TextField fx:id="loginField" layoutX="101.0" layoutY="96.0" prefHeight="26.0" prefWidth="197.0" promptText="Логин" />
      <TextField fx:id="passwordField" layoutX="101.0" layoutY="150.0" prefHeight="26.0" prefWidth="197.0" promptText="Пароль" />
      <Label layoutX="57.0" layoutY="35.0" text="Войти/Зарегистрироваться" textFill="WHITE">
         <font>
            <Font size="23.0" />
         </font>
      </Label>
      <Button fx:id="registerBtn" layoutX="225.0" layoutY="224.0" mnemonicParsing="false" onAction="#registerBtnClicked" style="-fx-background-color: #819830;" text="Зарегистрироваться" />
      <Button fx:id="logInBtn" layoutX="77.0" layoutY="224.0" mnemonicParsing="false" onAction="#logInBtnClicked" text="Войти" />
      <Label layoutX="2.0" layoutY="269.0" prefHeight="67.0" prefWidth="360.0" text="* чтобы зарегистрироваться введи желаемые данные пользователя и нажмите &quot;Зарегистрироваться&quot;" textAlignment="RIGHT" textFill="WHITE" wrapText="true">
         <font>
            <Font size="13.0" />
         </font>
      </Label>
      <Label fx:id="closeBtn" layoutX="369.0" layoutY="-9.0" onMouseClicked="#exitBtnClicked" text="x" textFill="WHITE">
         <font>
            <Font name="System Bold" size="32.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
